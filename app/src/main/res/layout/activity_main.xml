<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.sunhongbo.dispatchtouchsample.MainActivity">

    <com.example.sunhongbo.dispatchtouchsample.MyLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

        <com.example.sunhongbo.dispatchtouchsample.MyLayoutNext
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:orientation="vertical"
                android:background="#234">

        <com.example.sunhongbo.dispatchtouchsample.MyView
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:clickable="true"
                android:focusableInTouchMode="true"
                android:id="@+id/my_view"
                android:background="#123"/>

        <Button android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/colorAccent"
                android:id="@+id/btn"/>

        </com.example.sunhongbo.dispatchtouchsample.MyLayoutNext>

    </com.example.sunhongbo.dispatchtouchsample.MyLayout>
</FrameLayout>
